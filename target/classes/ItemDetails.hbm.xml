<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	 <class name="org.iiitb.ooad.model.ItemDetails" table="ItemDetails">
	 
      <meta attribute = "class-description">
         This class contains the Item Key Value details. 
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "item_id" column = "item_id" type = "int"/>
      <property name = "item_key" column = "item_key" type = "string"/>
      <property name = "item_value" column = "item_value" type = "string"/>
     
	</class>
	
</hibernate-mapping>